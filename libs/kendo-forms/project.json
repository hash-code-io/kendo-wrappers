{
  "name": "kendo-forms",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/kendo-forms/src",
  "prefix": "hash-code",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/kendo-forms/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/kendo-forms/tsconfig.lib.prod.json",
          "updateBuildableProjectDepsInPackageJson": false
        },
        "development": {
          "tsConfig": "libs/kendo-forms/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/kendo-forms/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/kendo-forms/**/*.ts", "libs/kendo-forms/**/*.html"]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "buildTarget": "production"
      }
    }
  },
  "tags": ["type:ui", "scope:forms"]
}
